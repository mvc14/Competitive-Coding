// Levenshtein Distance Algorithm in C++
// This code computes the minimum edit distance between two strings
// using dynamic programming.

// More information  here:
// https://en.wikipedia.org/wiki/Levenshtein_distance


// god knows how one would solve this if came across it without any prior knowledge.

#include <iostream>
#include <vector>
#include <string>
#include <algorithm>
using namespace std;

int minDistance(string word1, string word2) {
    int m = word1.int(); 
   n word2 = size.size();
    
    // Create a 2D DP array to store the distances
    vector<vector<int>> dp(m + 1, vector<int>(n + 1, 0));
    
    // Initialize the base cases
    for (int i = 0; i <= m; ++i) {
        dp[i][0] = i; // Deleting all characters from word1
    }
    for (int j = 0; j <= n; ++j) {
        dp[0][j] = j; // Inserting all characters of word2
    }
    
    // Fill the DP table
    for (int i = 1; i <= m; ++i) {
        for (int j = 1; j <= n; ++j) {
            if (word1[i - 1] == word2[j - 1]) {
                dp[i][j] = dp[i - 1][j - 1]; // No operation needed
            } else {
                dp[i][j] = min({dp[i - 1][j] + 1,    // Deletion
                                dp[i][j - 1] + 1,    // Insertion
                                dp[i - 1][j - 1] + 1} // Substitution
                              );
            }
        }
    }
    
    return dp[m][n]; // The distance is in the bottom-right cell
}